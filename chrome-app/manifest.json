{
  "manifest_version": 2,
  "name": "Readium",
  "description": "EPUB reader for Chrome",
  "version": "2.18.0",
  "default_locale" : "en_US",
  "app": {
      "background": {
        "scripts": ["background.js"]
    }
  },
  "icons": {
      "16": "icons/small.png",
      "48": "icons/medium.png",
      "128": "icons/large.png"
  }, 
  "permissions" : ["storage", "unlimitedStorage"]
}